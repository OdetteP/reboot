<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignParentBottom="false"
        android:layout_marginEnd="-112dp"
        android:layout_marginBottom="530dp"
        android:text="Welke doelen wil jij jezelf stellen "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/goalEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:text="Het doel "
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/goalEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_marginEnd="-312dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/whereEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:text="Waar voer je het doel uit?"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/whereEditText"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_marginEnd="-362dp"
        android:layout_marginBottom="1dp"
        android:layout_toStartOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/whenEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:text="Wanneer voer je het doel uit?"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/whenEditText"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_marginEnd="-252dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/howEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:text="Hoe voer je het doel uit?"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/howEditText"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_marginEnd="-340dp"
        android:layout_marginBottom="13dp"
        android:layout_toStartOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/preciseEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="11dp"
        android:text="Schrijf hier neer precieze tijd en plaats"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/preciseEditText"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_marginEnd="-307dp"
        android:layout_marginBottom="41dp"
        android:layout_toStartOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/moreEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="6dp"
        android:text="Schrijf hier andere details die je kwijt wil"

        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/moreEditText"
        android:layout_width="346dp"
        android:layout_height="36dp"
        android:layout_marginEnd="-210dp"
        android:layout_above="@+id/nextToBtn"
        />

    <Button
        android:id="@+id/nextToBtn"
        android:layout_width="166dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="10dp"
        android:text="Verder" />


</RelativeLayout>