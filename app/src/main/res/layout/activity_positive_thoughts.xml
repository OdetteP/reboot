<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PositiveThoughtsActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Zet hier je positieve gedachten neer voor je doel"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/thought1EditText"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="27dp" />


    <EditText
        android:id="@+id/thought4EditText"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thought3EditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="37dp" />

    <EditText
        android:id="@+id/thought2EditText"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thought1EditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="29dp" />

    <EditText
        android:id="@+id/thought3EditText"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thought2EditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="21dp" />

    <EditText
        android:id="@+id/thought5EditText"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thought4EditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/exampleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thought5EditText"
        android:layout_alignStart="@+id/thought1EditText"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="14dp"
        android:text="Voorbeelden" />

    <Button
        android:id="@+id/nextPageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thought5EditText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="14dp"
        android:text="Verder" />

</RelativeLayout>